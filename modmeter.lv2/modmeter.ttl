@prefix atom:  <http://lv2plug.in/ns/ext/atom#> .
@prefix doap:  <http://usefulinc.com/ns/doap#> .
@prefix foaf:  <http://xmlns.com/foaf/0.1/> .
@prefix lv2:   <http://lv2plug.in/ns/lv2core#> .
@prefix mod:   <http://moddevices.com/ns/mod#> .
@prefix pprop: <http://lv2plug.in/ns/ext/port-props#> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix units: <http://lv2plug.in/ns/extensions/units#> .
@prefix urid:  <http://lv2plug.in/ns/ext/urid#> .

<http://gareus.org/rgareus#me>
	a foaf:Person;
	foaf:name "Robin Gareus";
	foaf:mbox <mailto:robin@gareus.org>;
	foaf:homepage <http://gareus.org/> .

<http://gareus.org/oss/lv2/modmeter>
	a lv2:Plugin, doap:Project, lv2:UtilityPlugin;
	doap:license <http://usefulinc.com/doap/licenses/gpl>;
	doap:maintainer <http://gareus.org/rgareus#me>;
	doap:name "Level Meter";
	lv2:microVersion 3 ;lv2:minorVersion 769 ;
	lv2:optionalFeature lv2:hardRTCapable;
	lv2:requiredFeature urid:map;
	rdfs:comment "Numeric Audio Signal Level Meter (DPM with 15dB/sec falloff + RMS meter)";

	mod:brand "x42";
	mod:label "Level Meter";
	

	lv2:port [
		a lv2:AudioPort, lv2:InputPort ;
		lv2:index 0 ;
		lv2:symbol "in" ;
		lv2:name "In";
	] , [
		a lv2:InputPort, lv2:ControlPort;
		lv2:index 1;
		lv2:symbol "reset";
		lv2:name "Reset Peak Hold";
		lv2:minimum 0;
		lv2:default 0;
		lv2:maximum 1;
		lv2:portProperty lv2:integer, lv2:toggled, pprop:trigger;
	] , [
		a lv2:ControlPort, lv2:OutputPort ;
		lv2:index 2 ;
		lv2:symbol "level" ;
		lv2:name "Level" ;
		lv2:minimum 0.0 ;
		lv2:maximum 1.0 ;
	] , [
		a lv2:ControlPort, lv2:OutputPort ;
		lv2:index 3 ;
		lv2:symbol "peak" ;
		lv2:name "Peak" ;
		lv2:minimum 0.0 ;
		lv2:maximum 1.0 ;
	] , [
		a lv2:ControlPort, lv2:OutputPort ;
		lv2:index 4 ;
		lv2:symbol "rms" ;
		lv2:name "RMS" ;
		lv2:minimum 0.0 ;
		lv2:maximum 1.0 ;
	]
	.
